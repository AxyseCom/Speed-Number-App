<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GameActivity"
    android:background="#E3B8FC">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginTop="20dp">
           <TextView
               android:id="@+id/gameTimer"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:textSize="60dp"
               android:textColor="#ffffff"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_marginTop="20dp">

           <Button
               android:id="@+id/leftNum"
               android:layout_width="130dp"
               android:layout_height="wrap_content"
               android:background="@drawable/number_window_draw"
               android:gravity="center"
               android:textColor="#ffffff"
               android:textSize="80dp" />

           <Button
               android:id="@+id/operation"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:background="@drawable/operation_window_draw"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:textSize="50dp"/>

           <Button
               android:id="@+id/rightNum"
               android:layout_width="130dp"
               android:layout_height="wrap_content"
               android:background="@drawable/number_window_draw"
               android:gravity="center"
               android:textColor="#ffffff"
               android:textSize="80dp" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/topLeftAnswer"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_margin="20dp"
                   android:background="@drawable/answer_window_draw"
                   android:textSize="30dp"/>

               <Button
                   android:id="@+id/topRightAnswer"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_margin="20dp"
                   android:background="@drawable/answer_window_draw"
                   android:textSize="30dp"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <Button
                   android:id="@+id/bottomLeftAnswer"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_margin="20dp"
                   android:background="@drawable/answer_window_draw"
                   android:textSize="30dp"/>

               <Button
                   android:id="@+id/bottomRightAnswer"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_margin="20dp"
                   android:background="@drawable/answer_window_draw"
                   android:textSize="30dp"/>

           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/buttonScore"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/score_button_draw"
            android:textColor="#DBFE7B"
            android:textSize="50dp"
            android:text="@string/start"/>
    </LinearLayout>
</RelativeLayout>